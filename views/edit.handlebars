<section class="flex flex-column justify-center items-center pt5 ph3">
    <div class="f2-l f3 b">Fill the form</div>
    <p class="mt3 f4-l f5 tc">
        Would you like to edit your recipe?<br>
        Please fill out the following form and submit it.
    </p>

    {{!-- form for editpost --}}
    <form class="mt4 tl" id="edit-form">
        <div>
            <input type="hidden" name="recipe-id" value="{{recipe.id}}" />
            <label class="mr5" for="title">Title:</label>
            <input class="input-reset ba b--black-20 pa3 mb2 db w-100 mt2" type="text" id="title" name="title" value="{{recipe.title}}"/>
        </div>
        <div class="mt3">
            <label for="ingredients">Ingredients</label>
            <input class="input-reset ba b--black-20 pa3 mb2 db w-100 mt2" type="text" id="ingredients" name="ingredients" value="{{recipe.ingredients}}"/>
        </div>
        <div class="mt3">
            <label for="instructions">Instructions</label>
            <input class="input-reset ba b--black-20 pa3 mb2 db w-100 mt2 " type="text" id="instructions" name="instructions" value="{{recipe.instructions}}"/>
        </div>
        <div class="mt3">
            <label for="image">Image URL</label>
            <input class="input-reset ba b--black-20 pa3 mb2 db w-100 mt2" type="text" id="image" name="image" value="{{recipe.image_url}}"/>
        </div>
        <div class="mt3">
            <label for="category">Please put 1 for Breakfeast, 2 for Lunch, </br>3 for dinner, 4 for snack, and 5 for
                desert! </label>
            <input class="input-reset ba b--black-20 pa3 mb2 db w-100 mt2" type="integer" id="category" name="category" />
        </div>
        <div class="mt3 br2 mw4 primary-bg">
            <button class="db w-100 white" id="submit-btn" style="padding: 12px 0;" type="submit">Submit</button>
        </div>
    </form>
</section>

<script src="/js/edit.js"></script>