<section class="flex flex-row w-100 shadow-5 relative main-section">
    <div class="w-100 w-60-l main-background">
        <img class="h-100" src="/image/main-bg.jpg" alt="food image">
    </div>

    <div class="flex flex-column  justify-center w-40-l pv4 ph5-l ph2 absolute static-l main-text">
        <span class="f7 relative dn db-l primary-color"><i>WELCOME TO OUR HOMEPAGE</i></span>
        <h2 class="f1-l f2-m f3 section-title">Delicious Recipes</h2>
        <p class="mw6-l lh-copy-l mt4 f5-l dn db-l">Our website is a delightful culinary journey where you can explore a
            world of
            mouthwatering recipes, share your recipes, and connect with fellow food enthusiasts. Whether you're a
            seasoned chef or a kitchen newbie, join us to discover,
            create, and savor delicious moments together.
        </p>
        <p class="mt3 mw6 f6 db dn-l">
            Our website is a delightful culinary journey where you can explore a world of
            mouthwatering recipes and connect with fellow food enthusiasts.
        </p>
    </div>
</section>


<!-- Loop over each object in the recipes array -->
<section class="pv5 ph5-l recipe-section">
    <h3 class="f2-l f3-m f4 tc">Browse the Recipes</h3>
    <p class="mt3 tc">Explore Diverse Recipes and Challenge Your Culinary Skills Today!</p>
    <div class="center mt5 mw9">
        <ul class="flex flex-row flex-wrap justify-center">
            {{#each recipes as |recipe|}}
            <li class="w-100 w-40-m w-20-l mr3 mb3 recipe-card">
                <div class="overflow-hidden recipe-card-img">
                    <img class="w-100 h-100" src="{{recipe.image_url}}" alt="food image">
                </div>
                <div class="pa3">
                    <h4 class="f4-l f5 fw5">{{recipe.title}}</h4>
                    <p class="f6-l f7-m f8">{{format_date recipe.date_created}}</p>
                    <a href="/recipe/{{recipe.id}}" class="f6 br2 ph3 pv2 dib mt2 view-recipe">View Recipe</a>
                </div>
            </li>
            {{/each}}
        </ul>
    </div>
</section>