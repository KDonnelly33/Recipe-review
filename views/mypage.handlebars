{{!-- section for new post  --}}
<section class="mv5">
    <div class="flex flex-column items-center new-post-box">
        <h2 class="f3">Create a post</h2>
        <p class="f4 mt2 tc">
            Feeling creative in the kitchen?<br />
            Share your culinary masterpiece with the worldüçΩÔ∏è
        </p>
        <div class="mt3 black-bg br3 new-post">
            <a href="/newpost" class="ph4 pv3 db b white tc">+ New post</a>
        </div>
    </div>
{{!-- loops though users recipese and displays all --}}
    <div class="mt5 my-recipe-box">
        <h2 class="f3 tc mb4">My Recipe Lists</h2>
        <ul class="center mw7-l w-100">
            {{#each recipes as |recipe|}}
            <li class="flex flex-column flex-row-m flex-row-l justify-between items-center w-100 mr3 mb3 pa3 recipe-card">
                <div class="flex flex-column flex-row-l items-center items-stretch-m">
                    <h4 class="f4-l f6 fw5 tc tl-m tl-l mr2">
                        {{recipe.title}}
                    </h4>
                    <p class="f6-l f8">{{format_date recipe.date_created}}</p>
                </div>
                <div class="mt2 mt0-m mt0-l">
                    <a href="/recipe/{{recipe.id}}" class="f6 br2 ph3 pv2 dib primary-bg view-recipe">View</a>
                    <button type="button" class="f6 br2 ph3 pv2 dib grey-bg delete-btn" data-recipe-id="{{id}}">Delete</button>
                </div>
            </li>
            {{/each}}
        </ul>
    </div>
</section>


<script src="/js/delete-post.js"></script>